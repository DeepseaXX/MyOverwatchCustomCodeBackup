变量
{
	玩家:
		27: distanceyes
		28: distanceid
		29: textyes
}

规则("规则 96")
{
	事件
	{
		持续 - 每名玩家;
		双方;
		全部;
	}

	条件
	{
		已重生(事件玩家) == 真;
	}

	动作
	{
		创建HUD文本(事件玩家.textyes, 字符串("{0} 米", 相距距离(事件玩家, 全局.A[事件玩家.B])), 无, 无, 顶部, 0, 白色, 白色, 白色, 可见和字符串, 默认可见度);
		事件玩家.H[8] = 上一个文本ID;
		禁用 事件玩家.distanceyes = 1;
	}
}

规则("规则 96")
{
	事件
	{
		持续 - 每名玩家;
		双方;
		全部;
	}

	条件
	{
		已重生(事件玩家) == 真;
		按钮被按下(事件玩家, 近身攻击) == 真;
		禁用 事件玩家.distanceyes == 1;
		按钮被按下(事件玩家, 装填) == 真;
	}

	动作
	{
		禁用 消除HUD文本(事件玩家.distanceid);
		If(数组包含(事件玩家.textyes, 事件玩家));
			修改玩家变量(事件玩家, textyes, 根据值从数组中移除, 事件玩家);
		Else;
			修改玩家变量(事件玩家, textyes, 添加至数组, 事件玩家);
		End;
	}
}